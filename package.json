{
  "name": "project-timer",
  "productName": "Project Timer",
  "version": "0.1.5",
  "description": "A small timer app that can add timers for multiple projects.",
  "main": "index.js",
  "author": "Rene Merino <rmerino@amayamedia.com>",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Alxmerino/Project-Timer#readme",
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./src",
    "precommit": "npm run lint",
    "prepush": "npm test",
    "dev": "./node_modules/.bin/electron .",
    "prebuild": "mkdir -p ./build/node_modules && echo 'Created build directory!'",
    "build": "cp index.js index.html package.json ./build && echo 'Copied app files'",
    "postbuild": "cp -r ./node_modules/{menubar,electron-positioner} ./build/node_modules && echo 'Copied node modules'",
    "prepackage": "cp -r ./dist ./build/dist && cp -r ./src ./build && echo 'Copy dist and source files'",
    "package": "./node_modules/.bin/electron-packager ./build --asar=true --platform=darwin --arch=x64 --overwrite --app-version=1 --icon=./app-icon.icns --prune=false",
    "predist": "npm run build",
    "dist": "npm run package",
    "postdist": "rm -rf ./build && echo 'Remove build files'",
    "test": "./node_modules/.bin/jest --verbose --notify",
    "test:watch": "npm test -- --watch"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./tests/helpers/localStorage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alxmerino/Project-Timer.git"
  },
  "bugs": {
    "url": "https://github.com/Alxmerino/Project-Timer/issues"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "gulp": "^3.9.1",
    "gulp-generic-build": "git+ssh://git@github.com/Alxmerino/Gulp-Generic-Build.git",
    "gulp-if": "^2.0.2",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-uglify": "^2.0.1",
    "gulp-util": "^3.0.8",
    "menubar": "^5.2.3",
    "moment": "^2.17.1",
    "moment-duration-format": "^1.3.0",
    "moment-timer": "^1.1.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.2",
    "redux-promise-middleware": "^4.2.0",
    "redux-thunk": "^2.2.0",
    "underscore": "^1.8.3",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.9.0",
    "xStore": "^2.0.3"
  },
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "electron": "^1.6.2",
    "electron-packager": "^8.6.0",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.1.1",
    "gulp-connect": "^5.0.0",
    "husky": "^0.13.2",
    "jest": "^19.0.2"
  }
}
